<div class="panel panel-default" id="<%= dom_id(comment) %>">
  <div class="panel-heading">
    <strong><%= comment.user.name %></strong>
    <span class="text-muted">
      <%= t ".comment_at" %> <%= time_ago_in_words(comment.created_at) %>
      <%= t ".ago" %>
    </span>
    <div class="pull-right">
      <% if user_signed_in? %>
        <% if current_user == comment.user || current_user.is_admin_user? %>
          <%= link_to product_comment_path(@product, comment), method: :delete, class: "delete-comment" do %>
           <i class="fa fa-trash" aria-hidden="true"></i>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="panel-body">
    <%= comment.content %>
  </div>
</div>
