<header>
  <div class="container">
    <div class="modal fade" id="myModalSignup" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title" id="myModalLabel"><%= t ".signup" %></h4>
          </div>
          <div class="modal-body">
            <div class="col-md-8">
              <%= form_for resource, as: resource_name,
                url: registration_path(resource_name) do |f| %>

                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, class: "form-control" %>

                <%= f.label :password %>
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>

                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>

                <%= f.submit t(".signup"), class: "form-control btn btn-primary" %>
              <% end %>
            </div>
            <div class="col-md-4">
              <p><%= t ".forward_login" %></p>
              <a href="#" class="btn btn-danger" data-dismiss="modal" data-toggle="modal" data-target="#myModalLogin">
                <%= t ".login" %>
              </a>
            </div>
            <div class="clr"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal Login -->
    <div class="modal fade" id="myModalLogin" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title" id="myModalLabel"><%= t ".login" %></h4>
          </div>
          <div class="modal-body">
            <div class="col-md-8">
              <%= form_for resource, as: resource_name,
                url: session_path(resource_name) do |f| %>

                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, class: "form-control" %>

                <%= f.label :password %><br />
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>

                <% if devise_mapping.rememberable? -%>
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                <% end -%>

                <%= f.submit t(".login"), class: "form-control btn btn-primary" %>
              <% end %>
            </div>
            <div class="col-md-4">
              <p><%= t ".forward_signup" %></p>
              <a href="#" class="btn btn-danger" data-dismiss="modal" data-toggle="modal" data-target="#myModalSignup">
                <%= t ".signup" %>
              </a>
              <p><a href="#"><%= t ".forgot_password" %></a></p>
            </div>
            <div class="clr"></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to t("brand"), root_path, class: "navbar-brand" %>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <form class="navbar-form navbar-left">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Find products by keywords...">
          </div>
          <button type="submit" class="btn btn-default"><%= t ".search" %></button>
        </form>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <% unless current_user.admin? %>
              <li>
                <a href="/cart"><span class="glyphicon glyphicon-shopping-cart"></span></a>
              </li>
            <% end %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <span class="glyphicon glyphicon-user"></span> <%= t ".account" %> <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t(".profile"), current_user %></li>
                <li><a href="#"><%= t ".purchase_history" %></a></li>
                <li><a href="#"><%= t ".requests" %></a></li>
              </ul>
            </li>
            <li>
              <%= link_to destroy_user_session_path , method: :delete do %>
                <span class="glyphicon glyphicon-log-out"></span> <%= t ".logout" %>
              <% end %>
            </li>
          <% else %>
            <li>
              <a href="/cart"><span class="glyphicon glyphicon-shopping-cart"></span></a>
            </li>
            <li>
              <%= link_to "", data: {toggle: "modal", target: "#myModalSignup"} do %>
                <span class="glyphicon glyphicon-exclamation-sign"></span>
                  <%= t ".signup" %>
              <% end %>
            </li>
            <li>
              <%= link_to "", data: {toggle: "modal", target: "#myModalLogin"} do %>
                <span class="glyphicon glyphicon-log-in"></span>
                  <%= t ".login" %>
              <% end %>
            </li>
          <% end %>

        </ul>
      </div>
    </div>
  </nav>

  <div class="jumbotron">
  <%= image_tag "cover.jpg" %>
  </div>
</header>

