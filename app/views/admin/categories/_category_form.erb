<%= form_for @category, url:admin_categories_path, class: "form-horizontal" do |f|  %>
  <fieldset>
  <div class="form-group">
    <label class="col-md-4 control-label"><%= t("parent") %></label>
    <div class="col-md-6">
      <%= select_tag :parent_id, options_for_select(@categories.collect {
        |cate| ["#{'-' * cate.depth} #{cate.name}", cate.id]}, params[:parent_id]),
        {class: "form-control", id: "parent_category", include_blank: t("none")} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :name, class: "col-md-4 control-label" %>
    <div class="col-md-6">
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-md-4 control-label" %>
    <div class="col-md-6">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>
  <%= f.submit t("create"), class: "btn btn-primary", id: "btn-create-category" %>
  </fieldset>
<% end %>
