<%= form_for @category, url:admin_categories_path, class: "form-horizontal" do |f|  %>
  <fieldset>
    <div class="form-group">
      <div class="col-md-3 col-md-offset-1 row">
        <label class="control-label"><%= t("parent") %></label>
      </div>
      <div class="col-md-8 row">
        <%= select_tag :parent_id, options_for_select(@categories.collect {
          |cate| ["#{'-' * cate.depth} #{cate.name}", cate.id]}, params[:parent_id]),
          {class: "form-control", id: "parent_category", include_blank: t("none")} %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-3 col-md-offset-1 row">
        <%= f.label :name, class: "control-label" %>
      </div>
      <div class="col-md-8 row">
        <%= f.text_field :name, class: "form-control", required: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-3 col-md-offset-1 row">
        <%= f.label :description, class: "control-label" %>
      </div>
      <div class="col-md-8 row">
        <%= f.text_field :description, class: "form-control" %>
      </div>
    </div>

    <div class="col-md-offset-9">
      <%= f.submit t("create"), class: "btn btn-primary", id: "btn-create-category" %>
    </div>
  </fieldset>
<% end %>
