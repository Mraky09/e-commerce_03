<tr id="<%= dom_id(product) %>">
  <td>
    <%= index_for product_counter, @products.current_page,
      Settings.admin.product_list.per_page %>
  </td>
  <td><%= product.name %></td>
  <td><%= number_to_currency product.price %></td>
  <td>
    <%= number_with_delimiter product.quantity, delimiter: Settings.format.number_delimiter %>
  </td>
  <td><%= product.category.name %></td>
  <td class="no-data">
    <%= link_to product_path(product) do %>
      <% if product.image? %>
        <%= image_tag product.image.url %>
      <% else %>
        <img src="https://api.fnkr.net/testimg/100x85/00CED1/FFF/?text=img+placeholder">
      <% end %>
    <% end %>
  </td>
  <td class="align-text-center">
    <%= link_to edit_admin_product_path(product), class: "btn btn-warning btn-edit-product" do %>
      <span class="glyphicon glyphicon-edit"></span>
    <% end %>
  </td>
  <td class="align-text-center">
    <%= link_to admin_product_path(product), method: :delete, class: "btn btn-danger btn-delete-product" do %>
      <span class="glyphicon glyphicon-trash"></span>
    <% end %>
  </td>
</tr>
