<tr>
  <td>
    <%= index_for user_counter, @users.current_page,
      Settings.admin.users_list.per_page %>
  </td>
  <td class="align-text-center"><%= gravatar_for user %></td>
  <td><%= user.name %></td>
  <td><%= user.email %></td>
  <% if user.admin? %>
    <td><span class="is_admin"><%= t ".admin" %></span></td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
  <% else %>
    <td><span><%= t ".memeber" %></span></td>
    <td class="align-text-center">
      <%= link_to "#", class: "btn btn-danger" do %>
        <span class="glyphicon glyphicon-trash"></span>
      <% end %>
    </td>
    <td class="align-text-center">
      <%= link_to "#", class: "btn btn-info" do %>
        <span class="glyphicon glyphicon-lock"></span>
      <% end %>
    </td>
  <% end %>
</tr>
